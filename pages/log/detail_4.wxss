page {
  /* width: 750rpx; */
  background: #f7f7fa;
}
.top-box {
  /* width: 750rpx; */
  height: 120rpx;
  background: #ffffff;
  margin-top: 13rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: -3rpx;
}
.date-info {
  display: flex;
  align-items: center;
}
.icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 26rpx;
}
.date {
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
}
.date-special {
  font-size: 30rpx;
  font-weight: normal;
}
.date-name {
  font-size: 40rpx;
  color: #333333;
  font-weight: bold;
}
.sufferage-box {
  margin-bottom: 22rpx;
  display: flex;
}
.title {
  width: 130rpx;
  height: 54rpx;
  line-height: 54rpx;
  background: #f7f7fa;
  border-radius: 6rpx;
  text-align: center;
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: bold;
}
.title.multi-line {
  height: 114rpx;
}
.guancha-info {
  /* width: 750rpx; */
  width: 100vw;
  background: #ffffff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  margin-top: 43rpx;
}
.sufferage {
  flex: 1;
  /* width: 240rpx; */
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  background: rgba(247, 247, 250, 1);
  border-radius: 6rpx;
  font-size: 42rpx;
  color: #000000;
  font-weight: bold;
  margin-left: 40rpx;
}
.addpic-box {
  display: flex;
}
.blank {
  width: 130rpx;
  height: 240rpx;
}
.add-pic {
  width: 109rpx;
  height: 82rpx;
  padding: 79rpx 66rpx;
  border: 1rpx dotted #cccccc;
  border-radius: 6px;
  margin-left: 40rpx;
}
.treatment-box {
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-top: 30rpx;
}
.treat-info {
  display: flex;
  margin-bottom: 20rpx;
}
.content {
  flex: 1;
  /* width: 240rpx; */
  height: 54rpx;
  border: 1px solid rgba(204, 204, 204, 1);
  border-radius: 8px;
  line-height: 54rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}
.input-content {
  margin-left: 40rpx;
}
.remark-box {
  display: flex;
  align-items: center;
}
.remark-info {
  flex: 1;
  /* width: 240rpx; */
  height: 200rpx;
  border: 1rpx solid #cccccc;
  border-radius: 6px;
  font-size: 28rpx;
  padding: 17rpx 19rpx;
  box-sizing: border-box;
  margin-left: 40rpx;
}
::-webkit-input-placeholder {
  color: #999999;
  font-size: 22rpx;
}
.btn {
  width: 630rpx;
  height: 88rpx;
  background: rgba(72, 110, 157, 1);
  border-radius: 10rpx;
  font-size: 34rpx;
  color: #ffffff;
  font-weight: 500;
  margin: 100rpx auto 93rpx;
}
.treat-info-pos {
  position: relative;
  width: 240rpx;
  margin-left: 40rpx;
}
.right-arrow {
  position: absolute;
  top: 18rpx;
  right: 23rpx;
  width: 12rpx;
  height: 22rpx;
  transform: rotate(90deg);
}
.pic-wrapper {
  position: relative;
  flex: 1;
  /* width: 244rpx; */
  height: 242rpx;
  border: 1rpx dotted #cccccc;
  border-radius: 6px;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.chosen-pic {
  width: 90%;
  height: 90%;
}
.pic-close {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: -18rpx;
  right: -18rpx;
}
.tip {
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(152, 90, 161, 1);
  margin-bottom: 30rpx;
  text-align: right;
}