page {
  width: 750rpx;
  background: #ffffff;
}
.line {
  width: 750rpx;
  height: 23rpx;
  margin: 60rpx 0 40rpx;
}
.setting-box {
  width: 690rpx;
  height: 238rpx;
  margin: auto;
  background: #f7f7fa;
  border-radius: 14rpx;
  padding: 28rpx 32rpx;
  box-sizing: border-box;
}
.title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.title-blue {
  font-size: 44rpx;
  font-weight: bold;
  color: rgba(16, 58, 111, 1);
}
.title-gray {
  font-size: 44rpx;
  font-weight: bold;
  color: rgba(128, 128, 128, 1);
}
.switch {
  width: 152rpx;
  height: 46rpx;
}
.txt {
  font-size: 22rpx;
  color: #999999;
}
.txt-special {
  font-size: 24rpx;
  color: #666666;
}


/*swtich整体大小及背景色*/
.wx-switch-input{
  width:148rpx !important;
  height:36rpx !important;
  background: #fff !important;
  border: rgb(16, 58, 111) !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
  width: 146rpx !important;
  height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
  width: 145rpx !important;
  height: 36rpx !important;
  background: rgb(16, 58, 111) !important;
}