.page1 {
    width: 750rpx;
    margin: 0;
    border-bottom: solid 1rpx #E6E6E6;
    background: #F7F7FA;
}

.info-box {
    padding-top: 20rpx;
}

.user-info {
    position: relative;
    width: 750rpx;
    height: 100rpx;
    line-height: 100rpx;
    background: #ffffff;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    border-bottom: solid 1rpx #E6E6E6;
}

.user-info1 {
    border: none;
}

.title {
    width: 180rpx;
    height: 100%;
    line-height: 100rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #333333;
    padding-left: 35rpx;
    box-sizing: border-box;
}

.content {
    width: 570rpx;
    height: 100%;
    line-height: 100rpx;
    padding-left: 5rpx;
    font-size: 28rpx;
    color: #999999;
    border: 0;
    outline: none;
}

.input-content {
    color: #000000;
}

::-webkit-input-placeholder {
    color: #999999;
    font-size: 28rpx;
}

.sex-radio {
    width: 570rpx;
    height: 100%;
    line-height: 100rpx;
    padding-left: 5rpx;
    border: 0;
    font-size: 28rpx;
    display: flex;
}

.sex {
    display: flex;
    align-items: center;
    margin-right: 79rpx;
    position: relative;
}

.radio {
    position: absolute;
    z-index: 2;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.radio-pic {
    width: 30rpx;
    height: 30rpx;
    margin-right: 11rpx;
}

.radio-text {
    color: #999999;
}

.select {
    width: 570rpx;
    height: 99rpx;
    position: absolute;
    top: 0;
    right: 0;
    border: 0;
    outline: none;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    background: transparent;
}

.right-arrow {
    position: absolute;
    top: 39rpx;
    right: 30rpx;
    width: 12rpx;
    height: 22rpx;
}

.submit {
    width: 630rpx;
    height: 88rpx;
    background: linear-gradient(0deg, rgba(16, 58, 111, 1) 0%, rgba(74, 111, 158, 1) 100%);
    border-radius: 10rpx;
    font-size: 34rpx;
    color: #ffffff;
    text-align: center;
    line-height: 88rpx;
    margin: 354rpx auto 330rpx;
}