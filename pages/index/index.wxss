page .news-box .section-box {
  /* border-top: 1px solid #999; */
  display: -webkit-box;
  display: flex;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, 0.08);
  height: 160rpx;
  width: 690prx;
  -webkit-box-pack: justify;
  justify-content: space-between;
  -webkit-box-align: center;
  align-items: center;
  padding: 0 25rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

page .news-box .section-box .pic {
  width: 160rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

page .news-box .section-box .txt {
  width: 465rpx;
  height: 110rpx;
  display: -webkit-box;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  justify-content: space-around;
}

page .news-box .section-box .txt .title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;

  font-size: 28rpx;
  color: rgb(51, 51, 51);
}

page .news-box .section-box .txt .info {
  font-size: 24rpx;
